<div class="col-md-4">
  <div class="skills">
    <% @skills.each do |skill|  %>
        <div class="skill">
            <li class="badge"><%= skill.title %></li>
            <small>
            <%  if skill.jobs.any?  %>
              <%= link_to pluralize(skill.jobs.count, "job"), skill_path(skill) %>
            <% end %>
            </small>
            <small>
            <%  if skill.portfolios.any?  %>
              | <%= link_to pluralize(skill.portfolios.count, "portfolio items"), skill_path(skill) %>
            <% end %>
            </small>                
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%">
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>