<div class="container">
  <div class="row">
    <% @recent_snippets.each do |snippet| %>
      <div class="col-md-4 d-flex">
      <div class="card" style="width: 100%;">
          <div class="card-body flex-fill">
            <div class="card-title">
              <div class="header-5"><%= snippet.title %></div>
            </div> 
              <p><%= markdown truncate snippet.body, length: 150 %></p>
              <% if snippet.skills.any? %>
                <div class="category-container">
                    <% snippet.skills.each do |skill| %>
                          <%= render skill %>
                    <% end %>
                </div>   
              <% end %>
            </div>
            <div class="card-footer">
              <%= link_to 'View Snippet', blog_path(snippet.id), class: "btn btn-primary btn-block" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

