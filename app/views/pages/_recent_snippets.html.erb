<div class="container">
  <div class="row">
    <% @recent_snippets.each do |snippet| %>
    <div class="col-md-4">
     <div class="card card-block code-snippet-card">
              <h1 class="nun-black-h3"><%= snippet.title %></h1>
              <p><%= markdown truncate snippet.body, length: 150 %></p>
        
        <% if snippet.skills.any? %>
        <div class="category-container">
            <% snippet.skills.each do |skill| %>
                  <%= render skill %>
            <% end %>
         </div>   
        <% end %>
              <%= link_to 'View Snippet', blog_path(snippet.id), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

