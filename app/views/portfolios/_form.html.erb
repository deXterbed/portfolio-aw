<%= form_for(@portfolio_item) do |form| %>
 
 <div class="row pt-5">
    <div class="col-md-6">
     <div class="form-group">
       <%= form.label :title %>
       <%= form.text_field :title, class: "form-control" %>
     </div>
     
     <div class="form-group">
       <%= form.label :subtitle %>
       <%= form.text_field :subtitle, class: "form-control" %>
     </div>
   </div>
   
   <div class="col-md-6">
     <div class="form-group">
       <%= form.label :body %>
       <%= form.text_area :body, class: "form-control", row: 13 %>
     </div>
   </div>
 </div>

   <div class="form-group">
    <label class="btn btn-primary">
       Upload main image <%= form.file_field :main_image, style: 'display: none;' %>
    </label>
   </div>
   
   <div class="form-group">
    <label class="btn btn-primary">
       Upload thumb image <%= form.file_field :thumb_image, style: 'display: none;' %>
    </label>
   </div>

 <hr>
<div class="row">
  <div class="col-md-12">
    <h2>Technologies Used</h2>
       <%= form.fields_for :technologies do |technology_form| %>
           <li>
             <%= technology_form.label :name %>
             <%= technology_form.text_field :name %>
           </li>
       <% end %>
    
    
     <div class="actions">
       <%= form.submit "Submit",  class: "btn btn-primary btn-block mt-5" %>
     </div>
  </div>
</div>
<% end %>
