<div class="col-md-4 d-flex">
  <div class="card " data-id="<%= portfolio_item.id  %>">
      <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%', class: 'rounded portfolio-card-image' %>
    <div class="card-body flex-fill">
        <h3 class="header-4"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></h3>
        <h4 class="header-6 grey-md-text"><%= portfolio_item.subtitle %></h4>       

        <% if portfolio_item.skills.any? %>
          <div class="container">
              <div class="row">
                  <% portfolio_item.skills.each do |skill| %>
                      <%= render skill %>
                  <% end %>
              </div>
          </div>
        <% end %>
    </div>
     <div class="card-footer">  
        <%= link_to "View Item", portfolio_show_path(portfolio_item.id), 
                                 class: "mt-2 btn btn-primary btn-block" %>
     </div>      
  </div>
</div>