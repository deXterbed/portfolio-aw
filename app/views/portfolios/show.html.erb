<div class="container">
  <div class="row pt-5">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main') %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <h2><%= @portfolio_item.subtitle %></h2>
      <p><%= @portfolio_item.body %></p>

      <h2>Technologies Used</h2>
        <% @portfolio_item.technologies.each do |tech| %>
              <p><%= tech.name %></p>
        <% end %>

        <%= link_to "View all portfolio items", portfolios_path, class: "btn btn-secondary mt-5" %>
    </div>
  </div>
</div>




