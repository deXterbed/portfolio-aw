<div class="container">
 <h4 align="center"><%= @skill.title %></h4>
  
<div class="row">
 
  
    <% if @skill.jobs.count != 0 %>
      <div class="col-md-6">
        <div class="card card-block">
              <h4 align="center">Job's containing <%= @skill.title %></h4>
            
              <% @skill.jobs.each do |job| %>
                  <%= job.company %>
              <% end %>
        </div>
      </div>
    <% else %>
      <div class="col-md-6"><div class="card card-block"><h4 align="center">NA</h4></div></div>
    <% end %>
  
  
  
  <% if @skill.portfolios.count != 0 %>
  
      <div class="col-md-6">
        <div class="card card-block">
              <h4 align="center">Portfolio items containing <%= @skill.title %></h4>
            
              <% @skill.portfolios.each do |portfolio_item| %>
                  <%= portfolio_item.title %>
              <% end %>
        </div>
      </div>
  
  <% else %>
   <div class="col-md-6"><div class="card card-block"><h4 align="center">NA</h4></div></div>
  <% end %>
</div>



    <% if @skill.blogs.count != 0 %>
    <h2>Blogs Containing <%= @skill.title %></h2>
    <div class="row">
      <div class="col-md-3">
        <div class="card card-block">
              <% @skill.blogs.each do |job| %>
                  <%= job.title %>
              <% end %>
        </div>
      </div>
      </div>
    <% else %>
      <div class="col-md-6"><div class="card card-block"><h4 align="center">NA</h4></div></div>
    <% end %>
</div>