<div align="center">
  
  <% @skills.each do |skill| %>
    <ul class="listing">
      <div class="well col-md-4 col-md-offset-4">
       
        <li class="member-title"><%= link_to skill.title.capitalize, skill_path(skill) %></li>
        <li><small><%= pluralize(skill.jobs.count, "job") if skill.jobs  %></small></li>
      
        <li><%= link_to "Edit this skill", edit_skill_path(skill) %></li>
       
      </div>
    </ul>
  <% end %>
  
</div>